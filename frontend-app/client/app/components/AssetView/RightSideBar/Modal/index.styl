@import '~s-grid/s-grid-settings'
@import '~s-grid/s-grid-functions'

.modal
  position absolute
  width 100%
  height 100%
  top 0
  left 0
  right 0
  bottom 0
  background-color #fff
  z-index 9999

.modal-show
  @extends .modal
  display block
  transition opacity 250ms cubic-bezier(.2,.8,.5,1),top 0s linear 0s,left 250ms ease-in-out

.modal-hide
  display none

.container
  display flex
  flex-flow column
  justify-content center
  align-items center
  flex 1
  width 100%
  .content
    width 60vw

.header
  padding rem-calc(10)
  .modal-name
    font-size rem-calc(16)
    font-weight 300
    color #888
    padding-top rem-calc(40)
    padding-left rem-calc(50)

.close
  position absolute
  top rem-calc(25)
  right rem-calc(50)
  display flex
  flex-flow column
  justify-content center
  align-items center
  cursor pointer
  color #777
  padding-right rem-calc(50)
  i
    font-size rem-calc(32)
  span
    line-height rem-calc(15)
    font-size rem-calc(13)
  &:hover
    color #f26450

.content-header
  padding rem-calc(40) 0
  display flex
  flex-flow row
  justify-content space-between
  align-items center
  h5
    font-size rem-calc(32)
    font-weight 600
.save-btn
  outline none
  border none
  padding 0 rem-calc(10)
  border-radius rem-calc(3)
  font-size rem-calc(14)
  height rem-calc(35)
  cursor pointer
  color #fff

.save-btn-active
  @extends .save-btn
  background-color #f26450

.save-btn-disabled
  @extends .save-btn
  background-color rgba(242, 100, 80, 0.65)