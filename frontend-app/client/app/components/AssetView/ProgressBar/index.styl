
.ProgressBar-wrapper
  width 100%
  position relative
  height 25px
  background-color transparent
  border-radius 3px
  overflow hidden
  background-image linear-gradient(90deg, transparent 25%, #eee 25%, #eee 50%, transparent 50%, transparent 75%, #eee 75%, #eee)
  background-size 24px 10px

color=#fafafa
.progress
  height 100%
  border-top-left-radius 3px
  border-bottom-left-radius 3px
  transition width 0.6s ease
  float left
  background-size 24px 10px
  background-image linear-gradient(90deg, color 25%, transparent 25%, transparent 50%, color 50%, color 75%, transparent 75%, transparent)

.progress-bar-low
  @extends .progress
  background-color #f6416c

.progress-bar-medium
  @extends .progress
  background-color #fdbc41

.progress-bar-high
  @extends .progress
  background-color #00b8a9