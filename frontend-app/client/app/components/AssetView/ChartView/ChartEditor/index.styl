@import '~s-grid/s-grid-settings'
@import '~s-grid/s-grid-functions'

color-main-contrast-light = #F3B562
color-graphiti-orange = #F3B562
color-main-contrast-light2 = #F1797A
color-graphiti-red = #F26450
color-gpt-red-light-1 = #ff8371
color-gpt-red-dark-1 = #da5a48
color-gpt-blue = #0fa2e2
color-gpt-blue-dark-1 = #0d91ca
color-gpt-label-blue-dark = #5692ad
color-gpt-darkgrey = #717171
color-gpt-purple = #615dae

border-color=#f5f5f5
.ChartEditor
  display flex
  flex-flow row
  height 40%

.data-source
  display flex
  flex-flow column
  flex 0 0 20%
  .top
    position relative

.options
  display flex
  flex-flow row
  flex 0 0 80%

.sources
  flex 0 0 90%
  border-bottom 1px solid border-color
  overflow-x hidden
  overflow-y scroll

.types
  width rem-calc(40)
  display flex
  flex-flow column
  .middle,
  .bottom
    display flex
    flex-flow column
    justify-content flex-end

.plot,
  .data-source
    .top
      display flex
      align-items center
      justify-content space-between
      .label
        margin-left rem-calc(10)

.column
  display flex
  flex-flow column
  flex 1

.top
  flex 0 0 10%
  border-left 1px solid border-color
  border-bottom 1px solid border-color

.middle
  flex 0 0 45%
  border-left 1px solid border-color
  border-bottom 1px solid border-color
  overflow scroll

.bottom
  flex 0 0 45%
  border-left 1px solid border-color
  border-bottom 1px solid border-color

.label
  font-weight 400
  font-size rem-calc(13)
  color #444
  &.vertical
    transform rotate(-90deg)
    margin-bottom rem-calc(20)

.disabled
  cursor not-allowed
  background-color #eee

.details-label
  width rem-calc(40)
  display flex
  flex-flow column
  .top,
  .middle,
  .bottom
    display flex
    flex-flow column
    justify-content flex-end
    flex 1 1 auto

.details
  display flex
  flex-flow column
  flex 0 0 25%
  align-items stretch
  .top,
  .middle,
  .bottom
    display flex
    flex-flow column
    overflow-x hidden
    overflow-y scroll
    .label
      margin-left rem-calc(10)
  .top
    flex 0 0 40%
    .label
      margin-top rem-calc(10)
      margin-left rem-calc(10)
  .middle,
  .bottom
    flex 0 0 30%

.Slider-label
  display flex
  flex-flow row
  margin rem-calc(10) 0
  align-items center
  .slider
    padding-right rem-calc(20)
  .label
    margin-left 0
    width rem-calc(50)
  >div
    flex 1

.disable-layer
  background-color rgba(0,0,0,0.2)
  z-index 9
  width 100%
  height 100%
  position absolute