@import '~s-grid/s-grid-settings'
@import '~s-grid/s-grid-functions'

color-main-contrast-light = #F3B562
color-graphiti-orange = #F3B562
color-main-contrast-light2 = #F1797A
color-graphiti-red = #F26450
color-gpt-red-light-1 = #ff8371
color-gpt-red-dark-1 = #da5a48
color-gpt-blue = #0fa2e2
color-gpt-blue-dark-1 = #0d91ca
color-gpt-label-blue-dark = #5692ad
color-gpt-darkgrey = #717171
color-gpt-purple = #615dae

border-color=#f5f5f5
.ChartView
  width 100%
  height 100%

.scroll-configurer
  height rem-calc(30)
  border-bottom 1px solid border-color
  display flex
  flex 1 1 auto
  justify-content space-between
  align-items  center

.scroll
  display flex

.scroll-vertical
  margin-left rem-calc(10)

.scroll-horizontal
  margin 0

text-color=#444
checkbox-icon-font-size=14
.stack
  margin 0
  display flex
  align-items center
  margin-left rem-calc(10)
  h5
    font-size rem-calc(14)
    font-weight 400
    color text-color
  ul
    list-style none
    display flex
    li
      margin-left rem-calc(10)
      user-select none
      input[type=checkbox]
        border 0 
        clip rect(0 0 0 0) 
        height 1px 
        margin -1px 
        overflow hidden 
        padding 0 
        position absolute 
        width 1px
        cursor pointer
        &~label
          font-size rem-calc(12)
          color text-color
          cursor pointer
    
      input[type=checkbox] ~ label:before
        font-family FontAwesome 
        display inline-block 
        content "\f1db" 
        letter-spacing 10px 
        font-size rem-calc(checkbox-icon-font-size)
        // color text-color
        width 1.4em 

      input[type=checkbox]:checked ~ label:before
        content "\f00c" 
        font-size rem-calc(checkbox-icon-font-size)
        color color-graphiti-red 
        letter-spacing 5px 
      
      input[type=checkbox]:checked ~ label
        color color-graphiti-red