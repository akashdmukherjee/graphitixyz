@import '~s-grid/s-grid-settings'
@import '~s-grid/s-grid-functions'
@import '../../../../styles/animations'

color-main-contrast-light = #F3B562
color-graphiti-orange = #F3B562
color-main-contrast-light2 = #F1797A
color-graphiti-red = #F26450
color-gpt-red-light-1 = #ff8371
color-gpt-red-dark-1 = #da5a48
color-gpt-blue = #0fa2e2
color-gpt-blue-dark-1 = #0d91ca
color-gpt-label-blue-dark = #5692ad
color-gpt-darkgrey = #717171
color-gpt-purple = #615dae

.working-copies
  position absolute
  background-color #fff
  width rem-calc(350)
  border-radius rem-calc(3)
  top rem-calc(36)
  right rem-calc(0)
  box-shadow 0 1px 9px 1px rgba(0,0,0,.12), 0 1px 3px 0px hsla(0,0%,88%,.25)
  transition all 0.3s cubic-bezier(.25,.8,.25,1)
  transform-origin 50% top 0px
  @extend .animation-fade-in
  &:after,
  &:before {
    border: solid transparent;
    content: ' ';
    height: 0;
    pointer-events: none;
    position: absolute;
    width: 0
    top rem-calc(-20)
    right rem-calc(16)
  }
  &:before {
    top rem-calc(-22)
    border-bottom-color: #e8e8e8;
    margin-left: -10px;
    border-width: 11px;
  }
  &:after {
    border-bottom-color: #fff;
    border-width: 10px;
    margin-left: -10px;
  }
  ul
    list-style none
    width 100%
    li:last-child
      border-bottom none
    li
      display flex
      padding rem-calc(10) rem-calc(15)
      align-items center
      justify-content space-between
      flex 1
      border-bottom 1px solid #f3f3f3
      > div
        flex 1
        position relative
        h5
          font-size rem-calc(13)
          font-weight 400
          color #333333
        span
          display block
          position absolute
          top rem-calc(4)
          right rem-calc(10)
          cursor pointer
          display none
          transition all 0.32s ease-in
          width rem-calc(22)
          height rem-calc(22)
          border-radius 50%
          background-color #ddd
          line-height 1.2
          transition all 0.23s ease-in
          opacity 0
          i
            font-size rem-calc(8)
            margin-left rem-calc(7)
            color #333
          &.hovered
            display block
            opacity 1
          &.hovered-checked
            display block
            opacity 1
            background-color transparent
            i
              font-size rem-calc(20)
              margin-left 0
          
      input
        outline none
        border 1px solid #ddd
        height rem-calc(30)
        font-size rem-calc(13)
        flex 1
        margin-right rem-calc(10)
        border-radius rem-calc(3)
        background-color rgba(30, 30, 30, 0.02)
        padding-left rem-calc(8)
        &::-webkit-input-placeholder
          color rgba(0,0,0,0.4)
        &.edit-input
          padding 0
          background transparent
          border none
          margin 0
          &:enabled
            color #888
          &:disabled
            color #555
          &::selection
            background-color color-graphiti-red
            color #fff

.button
  outline none
  height rem-calc(30)
  background-color #fff
  border 1px solid #e7e6e5
  padding rem-calc(8)
  width rem-calc(110)
  font-size rem-calc(12.5)
  color #333333
  border-radius rem-calc(3)
  line-height 0.6
  cursor pointer
  &:hover
    background-color rgba(58,56,52,0.08)

.btn-selected
  @extend .button
  color color-gpt-purple
  border 1px solid color-gpt-purple

.btn-red
  @extend .button
  background-color color-graphiti-red
  color #fff
  border 1px solid color-graphiti-red
  &:hover
    background-color color-gpt-red-dark-1

.header
  margin-top rem-calc(15)
  margin-left rem-calc(15)
  h5
    font-size rem-calc(13)
    font-weight 400
    color #888888
    text-transform uppercase

