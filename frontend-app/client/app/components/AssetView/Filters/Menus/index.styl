@import '~s-grid/s-grid-settings'
@import '~s-grid/s-grid-functions'
@import '../../../../styles/animations'

.filter-menus-wrapper-open
  display block
  .filter-menus
    @extend .animation-fade-in
    width 180px
    list-style none
    margin 0
    padding 0
    box-shadow 0 1px 9px 1px rgba(0,0,0,.12), 0 1px 3px 0px hsla(0,0%,88%,.25)
    transition all 0.3s cubic-bezier(.25,.8,.25,1)
    position absolute
    z-index 999
    background-color #fff
    border-radius 4px
    top rem-calc(36)
    &:after,
    &:before {
      border: solid transparent;
      content: ' ';
      height: 0;
      pointer-events: none;
      position: absolute;
      width: 0
      top rem-calc(-20)
      left rem-calc(16)
    }
    &:before {
      top rem-calc(-22)
      border-bottom-color: #e8e8e8;
      margin-left: -11px;
      border-width: 11px;
    }
    &:after {
      border-bottom-color: #fff;
      border-width: 10px;
      margin-left: -10px;
    }
    >li
      text-align left
      cursor pointer
      >a
        background rgba(242, 100, 80, 0.03)
        margin 8px
        border-radius 3px
        border 1px solid rgb(249, 201, 201)
        color #f26450
        display block
        font-size rem-calc(12)
        text-decoration none
        padding rem-calc(5) rem-calc(8)
        position relative
        cursor pointer
        opacity 0.75
        transition border 0.25s linear, color 0.25s linear, background-color 0.1s ease-in-out
        box-shadow rgba(0,0,0,0.1) 0px 1px 2px
        &.active
          opacity 1
        &:hover
          opacity 1
    .menu-disabled
      >a
        background-color #c2c2c2
        border-color #f3f3f3
        color #f3f3f3
        opacity 0.7
        cursor not-allowed

.filter-menus-wrapper-close
  display none

.filter-submenus-wrapper
  position absolute

.filter-submenus-wrapper-open
  @extend .filter-submenus-wrapper
  visibility visible
  left 100%
  top 0
  .filter-submenus
    width auto
    list-style none
    margin 0
    padding 0
    box-shadow 0 1px 9px 1px rgba(0,0,0,.12), 0 1px 3px 0px hsla(0,0%,88%,.25)
    position absolute
    z-index 999
    background-color #fff
    border-radius 4px
.filter-submenus-wrapper-close
  @extend .filter-submenus-wrapper
  visibility hidden

.arrow-right
  right 5px
  top 33%
  font-size rem-calc(12)
  color rgb(249, 201, 201)
  position absolute 