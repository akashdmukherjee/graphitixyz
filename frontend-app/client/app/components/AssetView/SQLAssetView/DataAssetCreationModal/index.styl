@import '~s-grid/s-grid-settings'
@import '~s-grid/s-grid-functions'

color-main-contrast-light = #F3B562
color-graphiti-orange = #F3B562
color-main-contrast-light2 = #F1797A
color-graphiti-red = #F26450
color-gpt-red-light-1 = #ff8371
color-gpt-red-dark-1 = #da5a48
color-gpt-blue = #0fa2e2
color-gpt-blue-dark-1 = #0d91ca
color-gpt-label-blue-dark = #5692ad
color-gpt-darkgrey = #717171
color-gpt-purple = #615dae

.DataAssetViewCreationModal-wrapper
  height 100%
  overflow hidden
  display flex


.modal-content
  flex 1
  display flex
  flex-flow column
  position relative
  height 100%
  align-items center
  justify-content center
  .content
    flex 1
    display flex
    flex-direction column
    position relative

.inputs
  display flex
  flex-flow row
  position relative

.msg
  margin-top rem-calc(15)
  position absolute
  top 40px
  width 100%
  text-align center
  .status
    font-weight 300
    font-size rem-calc(13)
    color #444
    

.dataSetName
  height rem-calc(40)
  border 1px solid #ddd
  border-radius rem-calc(3)
  margin-right rem-calc(10)
  width rem-calc(300)
  outline none
  padding 0 rem-calc(10)
  transition  all 0.25s ease-in-out
  font-size rem-calc(14)
  &:focus
    border 1px solid color-graphiti-red

.close
  position absolute
  top rem-calc(15)
  right rem-calc(25)
  display flex
  flex-flow column
  justify-content center
  align-items center
  cursor pointer
  color #777
  z-index 999
  i
    font-size rem-calc(32)
  span
    line-height rem-calc(15)
    font-size rem-calc(13)
  &:hover
    color #f26450