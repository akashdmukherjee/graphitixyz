.btn-fav
  @extend .button
  background-color #fff
  color color-graphiti-red
  border 1px solid color-graphiti-red
  &:hover
    background-color #da5a48
    color #fff

.btn-fav-active
  @extend .button
  background-color color-graphiti-red
  border 1px solid color-graphiti-red
  color #fff
  &:hover
    background-color color-graphiti-red


.btn-permissions
  @extend .button
  background-color #f7f8fa
  border 1px solid rgba(0, 0, 0, 0.04)
  color #71767a
  &:hover
    background-color #dfe0e2
    
.btn-share
  @extend .btn-permissions
  padding rem-calc(7) rem-calc(15)
  background-color #fff
  border-color #e8e8e8
  color #444
  letter-spacing 0.3px
  height rem-calc(35)
  text-transform uppercase
  font-size rem-calc(11)
  font-weight 500
  &:hover
   background-color #e8e8e8
  i 
    margin-right 1px

.btn-copy
  @extend .btn-permissions
  i 
    margin-right 0!important

.btn-help
  @extend .btn-permissions
  width 100%
  margin rem-calc(10)

.btn-faq
  @extend .btn-help
  margin-right 0

.btn-notes
  @extend .btn-help

.btn-down
  @extend .btn-permissions
  height rem-calc(35)
  background-color #fff
  border-color #e8e8e8
  &:hover
    background-color #e8e8e8
  i 
    margin-right 0!important

.btn-save
  @extend .btn-down
  position relative
  span
    position absolute
    font-size 18px
    font-weight bold
    top -7px
    right 5px
    color #f26450

