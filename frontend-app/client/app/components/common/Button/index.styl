.btn-delete
  background #71767a
  font-weight 400
  font-size rem-calc(14)
  border 1px solid #65696d
  -webkit-box-shadow inset 0px 1px 1px rgba(255,255,255,0.2)
  box-shadow inset 0px 1px 1px rgba(255,255,255,0.2)
  width 92%
  padding rem-calc(8)
  color #fff
  margin rem-calc(10)
  position absolute
  bottom 0
  display inline-block
  white-space nowrap
  outline none
  border-radius rem-calc(3)
  transition border 0.25s linear, color 0.25s linear, background-color 0.25s linear
  cursor pointer
  &:hover
    background-color #da5a48
    border 1px solid #f26450

.btn-no-text
  @extend .btn-down
  margin-right rem-calc(10)
  height rem-calc(31)
