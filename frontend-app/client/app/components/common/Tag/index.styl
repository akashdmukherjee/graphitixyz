@import '~s-grid/s-grid-settings'
@import '~s-grid/s-grid-functions'

color-graphiti-red=#f26450
tag-label-color=#5d5d5d

.tag-label
  font-size rem-calc(12)
  line-height 1.9

.tag-wrapper
  width auto
  padding rem-calc(1) rem-calc(8)
  border-radius rem-calc(3)
  border 1px solid #f0f0f0
  background rgba(255,255,255,.97)
  margin 0
  cursor pointer
  line-height 1.3
  display inline-block
  transition border 0.25s linear, color 0.25s linear, background-color 0.1s ease-in-out

.tag-wrapper-gpt
  @extend .tag-wrapper
  background rgba(242, 100, 80, 0.03)
  border 1px solid rgb(249, 201, 201)
  padding rem-calc(4) rem-calc(8)
  opacity 0.75
  box-shadow rgba(0,0,0,0.1) 0px 1px 2px
  .tag-label
    font-size rem-calc(12)
    color #f26450!important
  .tag-close
    color #f26450!important
  &:hover
    opacity 1

.tag-wrapper
  &:hover
    border-color rgba(0,0,0,.15)
    background-color #fff
    .tag-label
      color rgba(0,0,0,0.8)

.tag-wrapper-active
  @extend .tag-wrapper
  border 1px solid color-graphiti-red
  .tag-label
    color color-graphiti-red!important
  &:hover
    border 1px solid color-graphiti-red
    .tag-label
      color color-graphiti-red!important

.tag-wrapper-gpt-active
  @extend .tag-wrapper-gpt
  background-color color-graphiti-red
  &>span
    color #fff

.tag-close
  cursor pointer
  margin-left 5px
