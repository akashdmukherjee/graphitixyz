@import '~s-grid/s-grid-settings'
@import '~s-grid/s-grid-functions'

@import '../../styles/settings'

.collapsible-left-menu
  height 100vh
  float left
  width 180px
  background-color color-background-menu-left-collapsible
  color color-main-dark
  box-shadow rem-calc(2) 0 rem-calc(3) rgba(0, 0, 0, .05), rem-calc(1) 0 0 rgba(0, 0, 0, .05)
  position relative
  z-index 99999
  padding-top rem-calc(15)
  padding-bottom rem-calc(15)

.left-menu-item-group
  border rem-calc(1) solid darken(color-graphiti-red, 10%)
  padding rem-calc(8) rem-calc(10)
  color color-graphiti-red
  background-color white
  font-weight 600
  text-shadow 0 rem-calc(1) 0 rgba(0,0,0,0.2)
  margin 0 rem-calc(5) rem-calc(5)
  user-select none
  cursor pointer
  border-radius rem-calc(2)
  font-size rem-calc(14)

.new-slide-form-container
  width 90%
  margin: rem-calc(20) auto
  input[type=text],
  button
    padding: rem-calc(10) rem-calc(15)
    width 100%
  input[type=text]
    border rem-calc(1) solid darken(color-main-light, 10%)
    margin-bottom rem-calc(5)
    outline none
  button
    cursor pointer
    background-color color-main-contrast-light2
    border none
    outline none
    color color-main-light