@import '~s-grid/s-grid-settings'
@import '~s-grid/s-grid-functions'

.autocomplete-wrapper
  width 93%
  z-index 999
  position absolute
  top rem-calc(80)
  left rem-calc(70)
  background-color #fff
  border-top 1px solid rgba(165, 165, 165, 0.57)
  box-shadow 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(224, 224, 224, 0.25)
  transition all 0.3s cubic-bezier(.25,.8,.25,1)
  list-style none
  li
    padding rem-calc(5)
    cursor pointer
    display flex
    align-items center
    &:hover
      background-color #ececec
      >.asset-name
        color #333
    a
      display flex
      align-items center
      text-decoration none
      flex 1
    .icon-wrapper
      color #777777
      padding rem-calc(10)
      margin-right rem-calc(10)
    .asset-name
      font-size rem-calc(13)
      font-weight 400
      color #545454
      span
        .author-label
          display block
          font-size rem-calc(11)
          font-weight 400
          color #777
          margin-top rem-calc(1)
          .authors
            color #888
            span
              margin-left rem-calc(6)
