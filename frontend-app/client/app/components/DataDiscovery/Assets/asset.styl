  background-image url('../../../images/asset_code.png')
.asset-icon-chart
  @extend .asset-icon
  background-image url('../../../images/asset_chart.png')


share-dialog-width=400
.share-wrapper
  z-index 1
  display inline
  position relative
  .share-dialog
    display flex
    flex-flow column
    position absolute
    width rem-calc(share-dialog-width)
    background-color #fff
    padding rem-calc(10)
    top rem-calc(37)
    right rem-calc(10)
    border 1px solid #e8e8e8
    border-radius rem-calc(3)
    transition all 0.3s ease-in-out 0s, visibility 0s linear 0.3s, z-index 0s linear 0.01s
    &:after,
      &:before
        bottom 100%
        border solid transparent
        content ' '
        height 0
        pointer-events none
        position absolute
        width 0
    &:before
      border-bottom-color #e8e8e8
      margin-left -11px
      border-width 11px
      right 0
    &:after
      border-bottom-color #fff
      border-width 10px
      margin-left -10px
      right 0.04rem

    .invite
      display flex
      padding rem-calc(5) 0
      cursor pointer
      &:hover
        >h5
          color #f26450
      h5
        font-size rem-calc(14)
        font-weight 400
        color #444
    div h5
      font-size rem-calc(12)
      font-weight 300
      color #555
      margin-top rem-calc(5)
    .inputs-wrapper
      display flex
      flex-flow row
      padding-top rem-calc(5)
      >input
        outline none
        width 100%
        padding rem-calc(5)
        border-radius rem-calc(3)
        box-shadow none
        border 1px solid rgba(0,0,0,0.15)
        border-right none
        border-top-right-radius 0
        border-bottom-right-radius 0
        transition border .25s linear,color .25s linear,background-color .25s linear
        font-size rem-calc(12)
        color text-normal-light-color
        font-weight 400

.share-dialog-hide
  display none