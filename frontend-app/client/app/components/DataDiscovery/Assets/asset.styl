@import './index.styl'

.asset
  border-bottom 1px solid border-color
  cursor pointer
  user-select none
  list-style none
  > div
    text-decoration none
    display flex
    flex 1
    padding rem-calc(20)
  &:hover
    background-color bg-color
    .asset-btns
      transition all 0.25s ease-in-out
      opacity 1
  .icon
    width rem-calc(80)
    height rem-calc(80)
    margin-right rem-calc(20)
    background-color #f2f2f2
    display flex
    align-items center
    justify-content center
    opacity 0.6
    border-radius rem-calc(3)

  .asset-details
    display flex
    flex-flow column
    flex 1
    .asset-name
      font-weight 300
      font-size rem-calc(18)
      letter-spacing 0.3px
      color #000
    .asset-description
      color #999
      font-weight 400
      font-size rem-calc(13)
      margin rem-calc(5) 0
    .asset-footer
      display flex
      flex-flow row
      justify-content space-between
      height rem-calc(30)
      z-index 1

.tags
  display flex
  flex .7
  overflow-x scroll
  overflow-y hidden
  white-space nowrap
  .tag
    margin 0 rem-calc(5)
  .tag:first-child
    margin-left 0  

.tags-list
  display none
  list-style none
  position absolute
  z-index 999
  left 70%
  top 100%
  background-color #fff

.asset-infos
  margin 0
  display flex
  .asset-btns
    margin 0
    opacity 0
    transition all 0.25s ease-in-out
  .asset-endorsements
    margin 0
    margin-left rem-calc(10)
    display flex
    align-items center
    .endorsement
      margin 0
      display flex
      margin-right rem-calc(10)
      align-items center
      &:last-child
        margin-right 0
    img
      width rem-calc(16)
      height rem-calc(16)

.count
  font-size rem-calc(14)
  color #868686
  margin-left rem-calc(2)

.count-trust-active
  @extend .count
  color #39A995

.count-error-active
  @extend .count
  color #FF8A1E

.count-deprecate-active
  @extend .count
  color #f06f6a

